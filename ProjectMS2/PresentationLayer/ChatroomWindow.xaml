<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectMS2.PresentationLayer"
        xmlns:BusinessLayer="clr-namespace:ProjectMS2.BusinessLayer" x:Class="ProjectMS2.PresentationLayer.ChatroomWindow"
        mc:Ignorable="d"
        Title="ChatroomWindow" Height="600" Width="1000">
    <Grid>
        <Rectangle Fill="LightSeaGreen"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="501" VerticalAlignment="Top" Width="788"/>
        <Button Content="Logout" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Width="113" Margin="844,522,0,0" Height="39" Click="click_btn_logout"/>
        <TextBox  IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Visible" x:Name="txt_msg" Background="SkyBlue" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="447" Width="612" Margin="84,10,0,0" FontFamily="Segoe Print" Text="{Binding msg, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" />
        <Button x:Name="btn_refresh" Content="refresh" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,35,0,0" Click="btn_refresh_Click"/>


    </Grid>
</Window>
